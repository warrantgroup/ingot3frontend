<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0"/>
    <title>
        {%- if block('title') -%}
            {{ block('title') }}
        {%- else -%}
            Ingot Portal
        {%- endif -%}
    </title>

    {% block requirejs %}
        {{ include('_requirejs.html.twig', {module: false}) }}
    {% endblock %}

    {% block stylesheets %}
        <link href="{{ asset(assetsPath~'/vendor/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet"/>
        <link href="{{ asset(assetsPath~'/vendor/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet"/>
        <link href="{{ asset(assetsPath~'/kendo/2014.2.903/styles/kendo.common-bootstrap.min.css') }}"
              rel="stylesheet"/>
        <link href="{{ asset(assetsPath~'/kendo/2014.2.903/styles/kendo.bootstrap.min.css') }}" rel="stylesheet"/>

        <link href="{{ asset(assetsPath~'/css/main.css') }}" rel="stylesheet"/>
        <link href="{{ asset(assetsPath~'/css/kendo.css') }}" rel="stylesheet"/>
    {% endblock %}
</head>

<body>

<header class="header navbar navbar-fixed-top" role="banner">
    <div class="container">

        <a class="navbar-brand" href="index.html">
            <strong>Ingot</strong> Portal
        </a>

        <ul class="nav navbar-nav navbar-left hidden-xs hidden-sm">
            <li>
                <a href="#">
                    Dashboard
                </a>
            </li>
        </ul>


        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-warning"></i>
                    <span class="badge">1</span>
                </a>
                <ul class="dropdown-menu extended notification">
                    <li class="title">
                        <p>You have 1 new notifications</p>
                    </li>
                    <li>
                        <a href="javascript:void(0);">
                            <span class="label label-success"><i class="icon-plus"></i></span>
                            <span class="message">New Booking received from Test Company Ltd</span>
                            <span class="time">1 mins</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li class="dropdown user">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="icon-male"></i>
                    <span class="username">Andy Roberts</span>
                    <i class="icon-caret-down small"></i>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="login.html"><i class="icon-key"></i> Log Out</a></li>
                </ul>
            </li>
        </ul>
    </div>
</header>

{% block body %}{% endblock %}

</body>
</html>