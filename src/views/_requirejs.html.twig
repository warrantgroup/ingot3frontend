<script src="{{ asset(assetsPath~'/vendor/requirejs/require.js') }}"></script>
<script>
    requirejs.config({
        baseUrl: '{{ app.request.basePath }}/{{ assetsPath }}/js',
        waitSeconds: 0
    });

    require(['common'], function (common) {
        {% if module %}
        require(['app/default', '{{ module }}']);
        {% else %}
        require(['app/default']);
        {% endif %}
    });
</script>