{% extends "layout.html.twig" %}

{% block body %}

    {% block requirejs %}
        {{ include('_requirejs.html.twig', {
        'module': 'app/shipment/editParty'
        }) }}
    {% endblock %}

    <div id="container">

    {% include "shipment/_sidebar.html.twig" %}

    <div id="content">
    <div class="container">

    {% include "shipment/_breadcrumbs.html.twig" %}

    <div class="page-header">
        <div class="page-title">
            <h3>IFT00001</h3>
            <span>Edit Party</span>
        </div>


        {% include "shipment/_addPartyCombo.html.twig" %}
    </div>

    <div id="form-changeParty">
        <fieldset>
            <legend class="form-legend">
                <span>Change Party</span>
            </legend>

            <div class="row">
                <label for="party" class="col-sm-3 control-label">Party Name <span
                            class="require">*</span></label>

                <div class="col-sm-9">
                    <div class="form-group">
                        <input data-role="autocomplete"
                            data-bind="source: party, events:{ select: partyListener }"
                            data-text-field="name"
                            data-filter="startsWith"
                            data-minLength="3"
                            id="party"
                            name="party"
                            required data-required-msg="Enter Party Name"
                            class="form-control"
                            class="full-width"/>
                        <span class="k-invalid-msg" data-for="party"></span>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
        <button class="k-button" type="submit" id="changeParty" />Change Party</button>
        <div class="changePartyStatus"></div>
    <div id="form-changePartyType">
        <fieldset>
            <legend class="form-legend">
                <span>Edit Party Type</span>
            </legend>
            <div class="row">
                <label class="col-md-3 control-label" for="partyType">Party Type:<span
                            class="require">*</span></label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <select data-role="dropdownlist"
                                    data-text-field="name"
                                    data-value-field="id"
                                    data-filter="startsWith"
                                    data-minLength="3"
                                    data-bind="source: partyTypeData"
                                    id="partyType"
                                    name="partyType"
                                    required data-required-msg="Enter Party Type"
                                    class="full-width">
                            </select>
                            <span class="k-invalid-msg" data-for="partyType"></span>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
        <button class="k-button" type="submit" id="changePartyType" />Change Party Type</button>
        <div class="changePartyTypeStatus"></div>
    <div id="form-editParty">
        <fieldset>
            <legend class="form-legend">
                <span>Edit Party Details</span>
            </legend>
            <div class="row">
                <label for="name" class="col-sm-3 control-label">Party Name <span
                            class="require">*</span></label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="name" name="name" required data-required-msg="Enter Party Name" class="form-control" class="full-width"/>
                            <span class="k-invalid-msg" data-for="name"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label for="phone" class="col-sm-3 control-label">Phone Number </label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="phone" class="form-control" class="full-width"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label for="fax" class="col-sm-3 control-label">Fax </label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="fax" class="form-control" class="full-width"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label for="website" class="col-sm-3 control-label">Website </label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="website" class="form-control" class="full-width"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label for="vatNo" class="col-sm-3 control-label">VAT Number </label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="vatNo" class="form-control" class="full-width"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label for="regNo" class="col-sm-3 control-label">Registration Number </label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="regNo" class="form-control" class="full-width"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label for="note" class="col-sm-3 control-label">Note </label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="note" class="form-control" class="full-width"/>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend class="form-legend">
                <span>Address Details</span>
            </legend>
            <div class="row">
                <label for="address1" class="col-sm-3 control-label">Address Line 1 <span
                            class="require">*</span></label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="address1" name="address1" required data-required-msg="Enter Address Line 1" class="form-control" class="full-width"/>
                            <span class="k-invalid-msg" data-for="address1"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label for="address2" class="col-sm-3 control-label">Address Line 2 <span
                            class="require">*</span></label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="address2" name="address2" required data-required-msg="Enter Address Line 2" class="form-control" class="full-width"/>
                            <span class="k-invalid-msg" data-for="address2"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label for="address3" class="col-sm-3 control-label">Address Line 3 </label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="address3" class="form-control" class="full-width"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label for="address4" class="col-sm-3 control-label">Address Line 4 </label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="address4" class="form-control" class="full-width"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label for="website" class="col-sm-3 control-label">Postcode <span
                            class="require">*</span></label>

                <div class="col-sm-4">
                    <div class="form-group">
                        <div class="controls">
                            <input type="text" id="postcode" name="postcode" required data-required-msg="Enter Postcode" class="form-control" class="full-width"/>
                            <span class="k-invalid-msg" data-for="postcode"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <label for="location" class="col-sm-3 control-label">Location <span
                            class="require">*</span></label>

                <div class="col-sm-9">
                    <div class="form-group">
                        <input data-role="autocomplete"
                               data-bind="source: location, events:{ select: locationListener }"
                               data-text-field="location"
                               data-filter="startsWith"
                               data-minLength="3"
                               id="location"
                               name="location"
                               required data-required-msg="Enter Location"
                               class="form-control"
                               class="full-width"/>
                        <span class="k-invalid-msg" data-for="location"></span>
                    </div>
                </div>
            </div>
        </fieldset>
        <button class="k-button" type="submit" id="submit"/>Edit Party</button>
        <div class="editPartyStatus"></div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}